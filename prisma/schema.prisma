generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id              String     @id @default(auto()) @map("_id") @db.ObjectId
    fullName        String
    email           String     @unique
    phone           String?
    bio             String?
    avatar          String?
    password        String
    role            UserRole
    status          UserStatus @default(ACTIVE)
    isEmailVerified Boolean    @default(false)
    createdById     String?    @db.ObjectId
    lastLoginAt     DateTime?
    createdAt       DateTime   @default(now())
    updatedAt       DateTime   @updatedAt

    @@index([role])
    @@map("Users")
}

enum UserRole {
    SUPER_ADMIN
    COMPANY_OWNER
    ADMIN_MANAGER
    SALES_REP_MANAGER
    SALES_REP
    CALL_CENTER_MANAGER
    APPOINTMENT_SETTER
}

enum UserStatus {
    ACTIVE
    INACTIVE
    BLOCKED
}
